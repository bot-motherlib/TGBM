                "CMAKE_CXX_FLAGS": "-nostdinc++ -I/usr/include/c++/13 -I/usr/include/x86_64-linux-gnu/c++/13",
                "CMAKE_EXE_LINKER_FLAGS": "-L/usr/lib/gcc/x86_64-linux-gnu/13"
            }
