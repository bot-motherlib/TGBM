{
    "version": 5,
    "configurePresets": [
        {
            "name": "clang_18_debug",
            "displayName": "Clang 18 Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/cmake_build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "clang_18_release",
            "displayName": "Clang 18 Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/cmake_build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }
    ]
}
